{
  "globals": {
    "process": true
  },
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["eslint:recommended", "plugin:jest/recommended", "plugin:react/recommended", "plugin:react-hooks/recommended"],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "ignorePatterns": [
    "jest.config.js",
    "webpack.config.js"
  ],
  "plugins": ["react", "react-hooks"],
  "rules": {
    "quotes": ["error", "single"],
    "react/prop-types": "off",
    "semi": "error"
  }
}  